{% extends '::administration.html.twig' %}

{% block h1 %}Gestion des utilisateurs > Ajouter{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="block-content-inner">
        <h3>Informations de l'utilisateur</h3>
        <div class="row">
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
        </div>
        <div class="row">{{ form_row(form.email) }}</div>
        <div class="row">{{ form_row(form.motDePasse) }}</div>
    </div><br/>
    <div class="block-content-inner">
        <h3>Informations du compte</h3>
        <div class="row">{{ form_row(form.role) }}</div>
    </div><br/>
    <div class="row">
        <div class="col-sm-2">{{ form_widget(form.save, {'attr': {'class': 'btn btn-secondary btn-block'}}) }}</div>
    </div>
    {{ form_end(form) }}
{% endblock %}
